<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  
<mapper namespace="CartDAO">
 

	<insert id="insertCart"> 
        INSERT INTO cart (cartno,category, name,price,location,resdate,userid ) VALUES (seq_cart.nextval, #{category},#{name},#{price},#{location},sysdate,#{userid}) 
    </insert>
    
    <select id="getcartCount" resultType="cart" parameterType="cart">
  		select count(*)"cartno" from cart where userid =#{value}
  	</select>
  	
  	<select id="getCartList" resultType="cart">
    	select * from cart where userId=#{userid}
    </select>
    
    <select id="getCartListCount" resultType="int">
    	select count(*) from cart where userId=#{userid}
    </select>
  
 	
</mapper>